# Smooth scroll with touchpad
set smooth-scroll true

# Inverse search for latex
# See https://blog.epheme.re/software/nvim-latex.html
set synctex true
set synctex-editor-command "nvim --headless -c \"VimtexInverseSearch %{line} '%{input}'\""

# Enable copy to clipboard
# See https://wiki.archlinux.org/title/Zathura#Enable_copy_to_clipboard
set selection-clipboard clipboard
